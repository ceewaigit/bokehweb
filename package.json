{
  "name": "screenstudio",
  "version": "0.1.0",
  "description": "Professional screen recording and editing app built with Electron and Next.js",
  "author": "Screen Studio Team",
  "private": true,
  "main": "electron/main/index.js",
  "homepage": "./",
  "scripts": {
    "dev": "NODE_ENV=development next dev",
    "build": "next build && npm run fix-paths",
    "build-only": "next build",
    "fix-paths": "node scripts/fix-production-paths.js",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron-dev": "concurrently \"NODE_ENV=development npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "build-electron": "npm run build && electron-builder",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:unit": "jest --testPathPattern=src/__tests__ --testPathIgnorePattern=integration",
    "test:integration": "jest --testPathPattern=integration",
    "test:debug": "jest --no-cache --detectOpenHandles",
    "test:quality": "npm run test:coverage && node scripts/test-quality-gate.js",
    "claude": "claude"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.38",
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@ffmpeg/util": "^0.12.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.1.1",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.468.0",
    "next": "14.2.16",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "claude": "^0.1.1",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.16",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.screenstudio.app",
    "productName": "Screen Studio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "hardenedRuntime": false,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Screen Studio needs access to your microphone to record audio with screen recordings.",
        "NSCameraUsageDescription": "Screen Studio needs access to your camera for video recording features.",
        "NSScreenCaptureDescription": "Screen Studio needs access to record your screen to create recordings.",
        "com.apple.security.device.audio-input": true,
        "com.apple.security.device.camera": true
      }
    }
  }
}
